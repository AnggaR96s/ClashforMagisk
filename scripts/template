  # lookup hosts and return IP record
  use-hosts: true
  fake-ip-filter: ['connect.rom.miui.com', '+.msftnsci.com', '+.msftconnecttest.com', '+.gstatic.com', '+.stun.*.*', '+.stun.*.*.*', '+.stun.*.*.*.*', '+.time.*', '+.time.*.*', '+.time.*.*.*', '+.ntp.*', '+.ntp.*.*', '+.ntp.*.*.*']
  nameserver:
    - '1.1.1.1'
  fallback:
    - '1.0.0.1'
